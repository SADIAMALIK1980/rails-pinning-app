<div class="form-horizontal">
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div class="text-danger col-sm-7 col-sm-offset-4"> 
<ul>
      <% @user.errors.full_messages.each do |message| %>
       <li>  <h4><i class="fa fa-exclamation-circle"></i>&nbsp;<%= message %></h4> </li>
      <% end %>
<ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :first_name, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :first_name %>
  </div></div>
  <div class="form-group">
    <%= f.label :last_name, class: "col-sm-2 control-label" %>
<div class="col-sm-10">
    <%= f.text_field :last_name %>
  </div></div>
  <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %>
<div class="col-sm-10">
    <%= f.text_field :email %>
  </div></div>
  <div class="form-group">
    <%= f.label :password, class: "col-sm-2 control-label" %>
<div class="col-sm-10">
    <%= f.text_field :password %>
  </div></div>
<div class="form-group">
  <div class="actions">
<div class="col-sm-offset-2 col-sm-10">
    <%= f.button(options = {class: "btn btn-default"}) %>
  </div></div></div>
<% end %>
</div>