<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
<th></th>
      <th>Last name</th><th></th>
      <th>Email</th><th></th>
      <th>Password</th><th></th>
      <th colspan="3"></th><th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td> <td></td>
        <td><%= user.last_name %></td><td></td>
        <td><%= user.email %></td><td></td>
        <td><%= user.password %></td><td></td>
        <td><%= link_to 'Show', user %></td><td></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td><td></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td><td></td>
      </tr>
    <% end %>
  </tbody>
</table>

