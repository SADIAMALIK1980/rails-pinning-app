<div class="header">
  <h1>
    <i class="fa fa-laptop"></i>
    <%= "#{@pins.title}" %>
  </h1>
</div>

<div class="show-pin">
  <p><%= "#{@pins.text}" %></p>
<img class="img-thumbnail center-block" src="<%= "#{@pins.image.url(:medium)}" %>">
  <hr/>
  <p>
    <b>Visit <%= "#{@pins.title}" %> at: </b>
<%= link_to "#{@pins.url}", "#{@pins.url}", html_options = {target: "_blank", class: "url"} %>
  </p>
</div>
<br/>
<a href="/">
  <i class="fa fa-hand-o-left fa-2x"></i>
  &nbsp;Back to Home
</a>
